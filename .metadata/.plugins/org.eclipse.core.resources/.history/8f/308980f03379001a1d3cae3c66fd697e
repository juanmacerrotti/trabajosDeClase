#include <stdio.h>
#include <stdlib.h>
#include "utn.h"

int main(void) {
	setbuf (stdout,NULL);

	int edad;
	int respuesta;
	int peso;

	respuesta =utn_getNumero (&edad,"Edad? \n","Error la edad debe ser desde 0 a 199\n", 0,199,2);
	if (respuesta ==0)
	{
		printf("la edad es %d", edad);
	}
	else{
		printf("ERROR");
	}


	respuesta =utn_getNumero (&peso,"peso? \n","Error la edad debe ser desde 0 a 500\n", 0,500,3);
		if (respuesta ==0)
		{
			printf("la peso es %d", peso);
		}
		else{
			printf("ERROR");
		}
return EXIT_SUCCESS;
}


